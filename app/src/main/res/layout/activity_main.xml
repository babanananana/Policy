<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/input_searchWrd"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="검색어" />

            <EditText
                android:id="@+id/input_lifeArray"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="생애주기" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/input_trgterIndvdlArray"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="가구유형" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">



                <EditText
                    android:id="@+id/input_desireArray"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:hint="사업목적" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonAPI_List"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="14dp"
                    android:onClick="onClick_serch_List"
                    android:text="목록조회" />

                <Button
                    android:id="@+id/buttonAPI_Detail"
                    android:layout_width="220dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="12dp"
                    android:onClick="onClick_serch_Detail"
                    android:text="상세정보검색" />

            </LinearLayout>

            <ListView
                android:id="@+id/listView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>